generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  firstName    String   @map("first_name")
  lastName     String   @map("last_name")
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  userRoles           UserRole[]
  refreshTokens       RefreshToken[]
  sectionMembers      SectionMember[]
  organizationMembers OrganizationMember[]
  createdInvites      InviteToken[]
  auditLogs           AuditLog[]

  @@map("users")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now()) @map("created_at")

  userRoles       UserRole[]
  rolePermissions RolePermission[]

  @@map("roles")
}

model Permission {
  id          String   @id @default(uuid())
  entity      String
  action      String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")

  rolePermissions RolePermission[]

  @@unique([entity, action])
  @@map("permissions")
}

model UserRole {
  id     String @id @default(uuid())
  userId String @map("user_id")
  roleId String @map("role_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@map("user_roles")
}

model RolePermission {
  id           String @id @default(uuid())
  roleId       String @map("role_id")
  permissionId String @map("permission_id")

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@map("role_permissions")
}

model RefreshToken {
  id        String   @id @default(uuid())
  jti       String   @unique
  tokenHash String   @map("token_hash")
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

enum TaxSystem {
  USN6
  USN15
  AUSN8
  AUSN20
  PSN
  OSNO
  USN_NDS5
  USN_NDS7
  USN_NDS22
}

enum DigitalSignatureStatus {
  NONE
  CLIENT
  US
}

enum ReportingChannel {
  KONTUR
  SBIS
  ASTRAL
}

enum ServiceType {
  ZERO
  MINIMAL
  FULL
  HR
  REPORTING
  HR_REPORTING
  PARTIAL
}

model Section {
  id        String   @id @default(uuid())
  number    Int      @unique
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  members       SectionMember[]
  organizations Organization[]

  @@map("sections")
}

model SectionMember {
  id        String @id @default(uuid())
  sectionId String @map("section_id")
  userId    String @map("user_id")
  role      String // accountant, auditor

  section Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([sectionId, userId])
  @@map("section_members")
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  inn       String?  @unique
  form      String? // NKO, IP, OOO
  status    String   @default("active") // active, new, archived
  sectionId String?  @map("section_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // --- Общая ---
  taxSystems      TaxSystem[]                    @map("tax_systems")
  employeeCount   Int?                           @map("employee_count")
  opsPerMonth     Int?                           @map("ops_per_month")
  hasCashRegister Boolean     @default(false)    @map("has_cash_register")

  // --- Юридическая ---
  kpp          String?
  legalAddress String? @map("legal_address")

  // --- Бухгалтерская ---
  digitalSignature       DigitalSignatureStatus? @map("digital_signature")
  digitalSignatureExpiry DateTime?               @map("digital_signature_expiry")
  reportingChannel       ReportingChannel?       @map("reporting_channel")
  serviceType            ServiceType?            @map("service_type")

  // --- Финансовая ---
  monthlyPayment     Decimal? @db.Decimal(12, 2) @map("monthly_payment")
  paymentDestination String?                     @map("payment_destination")
  debtAmount         Decimal? @db.Decimal(12, 2) @map("debt_amount")

  section      Section?             @relation(fields: [sectionId], references: [id], onDelete: SetNull)
  members      OrganizationMember[]
  inviteTokens InviteToken[]
  bankAccounts OrganizationBankAccount[]
  contacts     OrganizationContact[]

  @@map("organizations")
}

model OrganizationMember {
  id             String @id @default(uuid())
  userId         String @map("user_id")
  organizationId String @map("organization_id")
  role           String @default("client") // client, responsible, etc.

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@map("organization_members")
}

model InviteToken {
  id             String    @id @default(uuid())
  token          String    @unique
  organizationId String    @map("organization_id")
  createdById    String    @map("created_by_id")
  expiresAt      DateTime  @map("expires_at")
  usedAt         DateTime? @map("used_at")
  createdAt      DateTime  @default(now()) @map("created_at")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdBy    User         @relation(fields: [createdById], references: [id], onDelete: Cascade)

  @@map("invite_tokens")
}

model OrganizationBankAccount {
  id             String   @id @default(uuid())
  organizationId String   @map("organization_id")
  bankName       String   @map("bank_name")
  accountNumber  String?  @map("account_number")
  login          String?
  comment        String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@map("organization_bank_accounts")
}

model OrganizationContact {
  id             String   @id @default(uuid())
  organizationId String   @map("organization_id")
  contactPerson  String   @map("contact_person")
  phone          String?
  email          String?
  telegram       String?
  comment        String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@map("organization_contacts")
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?  @map("user_id")
  action    String
  entity    String?
  entityId  String?  @map("entity_id")
  details   Json?
  ipAddress String?  @map("ip_address")
  createdAt DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("audit_logs")
}
